---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Wordpress from "./icons/Wordpress.astro"
import Css from "./icons/Css.astro"
import HTML from "./icons/HTML.astro"
import Elementor from "./icons/Elementor.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  WORDPRESS: {
    name: "Wordpress",
    class: "bg-white bg-opacity-70 text-black",
    icon: Wordpress,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: Css,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#003159] text-white",
    icon: HTML,
  },
  Elementor: {
    name: "Elementor",
    class: "bg-[#003159] text-white",
    icon: Elementor,
  },
}
const PROJECTS = [

  {
    title: "Planeta Osaka - Web de turismo para viajar a Osaka",
    description:
      "Web gratuita con información completa sobre Osaka. Creada con WordPress y Elementor para proporcionar una experiencia de usuario atractiva y fácil de navegar.",
    link: "https://www.planetaosaka.com/",
    image: "/projects/planeta-osaka-proyecto.webp",
    tags: [TAGS.WORDPRESS, TAGS.Elementor],
  },
  {
    title: "Planeta Tokio - Web de turismo para viajar a Tokio",
    description:
      "Web gratuita con información completa sobre Tokio. Creada con WordPress y Elementor para proporcionar una experiencia de usuario atractiva y fácil de navegar.",
    link: "https://www.planetatokio.com/",
    image: "/projects/planeta-tokio-proyecto.webp",
    tags: [TAGS.WORDPRESS, TAGS.Elementor],
  },
  {
    title: "Planeta Gandía - Web de turismo para viajar a Gandía",
    description:
      "Web gratuita con información completa sobre Gandía. Creada con WordPress y Elementor, con una interfaz llamativa y una navegación intuitiva para los usuarios.",
    link: "https://planetagandia.com/",
    image: "/projects/planeta-gandia-proyecto.webp",
    tags: [TAGS.WORDPRESS, TAGS.Elementor],
  },
  {
    title: "Planeta Ibiza - Web de turismo para viajar a Ibiza",
    description:
      "Web gratuita con información completa sobre Ibiza. Creada mediante WordPress y Elementor, con una interfaz atractiva y una navegación intuitiva.",
    link: "https://www.planetaibiza.com/",
    image: "/projects/planeta-ibiza-proyecto.webp",
    tags: [TAGS.WORDPRESS, TAGS.Elementor],
  },
  {
    title: "Conviure - Web de Administración de Fincas en Ibiza",
    description:
      "Web especializada en servicios de administración de fincas en Ibiza. Diseñada con WordPress y Elementor.",
    link: "https://www.conviureibiza.com/",
    image: "/projects/conviure-ibiza-proyecto.webp",
    tags: [TAGS.WORDPRESS, TAGS.Elementor],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link}) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



